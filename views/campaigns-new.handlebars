<!-- views/reviews-new.handlebars -->

<form method="POST" action="/campaigns">
    <fieldset>
        <legend>New Campaign</legend>
        <!-- TITLE -->
        <p>
            <label for="campaign-title">Title</label><br>
            <input id="campaign-title" type="text" name="title" />
        </p>

        <!-- MOVIE TITLE -->
        <p>
            <label for="campaign-title">Funding Goal</label><br>
            <input id="campaign-title" type="text" name="amount" />
        </p>

        <!-- DESCRIPTION -->
        <p>
            <label for="description-text">Description</label><br>
            <textarea id="description-text" name="description" rows="10" /></textarea>
        </p>
    </fieldset>

    <!-- BUTTON -->
    <p>
        <button type="submit">Save Campaign</button>
    </p>

</form>